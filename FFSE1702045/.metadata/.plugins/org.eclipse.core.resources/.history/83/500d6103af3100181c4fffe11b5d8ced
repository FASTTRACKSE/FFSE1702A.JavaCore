package JavaSwing;
 
import java.awt.*;
import java.awt.event.*;
import javax.swing.*;
 
public class Tee {
    
   private JFrame mainFrame;
   private JLabel headerLabel;
   private JLabel statusLabel;
   private JPanel controlPanel;

   public Tee(){
      prepareGUI();
   }

   public static void main(String[] args){
      Tee  swingControlDemo = new Tee();      
      swingControlDemo.showTextFieldDemo();
   }

   private void prepareGUI(){
      mainFrame = new JFrame("Vi du Java Swing");
      mainFrame.setSize(500,700);
      mainFrame.setLayout(new GridLayout(3, 1));
      mainFrame.addWindowListener(new WindowAdapter() {
         public void windowClosing(WindowEvent windowEvent){
            System.exit(0);
         }        
      });    
      headerLabel = new JLabel("", JLabel.CENTER);        
      statusLabel = new JLabel("",JLabel.CENTER);    



      controlPanel = new JPanel();
      controlPanel.setLayout(new FlowLayout());

      mainFrame.add(headerLabel);
      mainFrame.add(controlPanel);
      mainFrame.add(statusLabel);
      mainFrame.setVisible(true);  
      
   }

   private void showTextFieldDemo(){
      headerLabel.setText("Chuong trinh quan ly sinh vien"); 

      
     
     
  	
  	   
    	      
      
      
      JLabel  SoALabel= new JLabel("MSSV: ", JLabel.RIGHT);
      JLabel  soBLabel = new JLabel("TEN SV: ", JLabel.RIGHT);
      JLabel  soCLabel = new JLabel("TUOI SV: ", JLabel.RIGHT);
      final JTextField a = new JTextField(40);
      final JTextField b = new JTextField(40);
      final JTextField c = new JTextField(40);
 
     

      JButton luu = new JButton("Luu");
      luu.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {     
           
            
            }
        
      }); 

      JButton moi = new JButton("Moi");
      moi.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {     
          
            
            }
        
      }); 

      
      JButton xoa = new JButton("Xoa");
      xoa.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {     
          
           
            
            }
        
      }); 
      
      JButton thoat = new JButton("Thoat");
      thoat.addActionListener(new ActionListener() {
         public void actionPerformed(ActionEvent e) {     
         
            
            }
        
      }); 
      
      
      controlPanel.add(SoALabel);
      controlPanel.add(a);
      controlPanel.add(soBLabel);       
      controlPanel.add(b);
      controlPanel.add(soCLabel);
      controlPanel.add(c);
      controlPanel.add(luu);
      controlPanel.add(moi);
      controlPanel.add(thoat);
      controlPanel.add(xoa);
      mainFrame.setVisible(true);  
   }
}